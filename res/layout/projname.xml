<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">
    
    <ImageView android:id="@+id/addproj_prompt" 
        	   android:layout_width="wrap_content"
        	   android:layout_height="wrap_content"
        	   android:paddingTop="20dp"
        	   android:adjustViewBounds="true"
        	   android:maxWidth="349dp"
        	   android:maxHeight="312dp"
        	   android:scaleType="fitCenter"
        	   android:layout_centerHorizontal="true"
        	   android:src="@drawable/addproject_prompt"/>
       
	<TextView android:id = "@+id/projname_input_prompt1" 
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content" 
			  android:paddingTop="30dp"
			  android:gravity="center"
			  android:text="建立專案十分容易！"
			  android:textAppearance="?android:attr/textAppearanceMedium"
			  android:layout_below="@id/addproj_prompt"/>
			  
	<TextView android:id="@+id/projname_input_prompt2" 
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:paddingBottom="25dp"
			  android:gravity="center"
			  android:text="僅需輸入專案名稱即可："
			  android:textAppearance="?android:attr/textAppearanceMedium"
			  android:layout_below="@id/projname_input_prompt1"/>
	
	<EditText android:id="@+id/projname_input"
    		  android:layout_width="300px"
    		  android:layout_height="wrap_content"
    		  android:layout_centerHorizontal="true"
    		  android:singleLine="true"
    		  android:hint="@string/enter_project_name_here"
    		  android:layout_below="@id/projname_input_prompt2"/>

	<Button android:id="@+id/next"
			android:layout_width="300px"
			android:layout_height="wrap_content" 
			android:layout_centerHorizontal="true"
			android:text="@string/create_project"
			android:layout_below="@+id/projname_input"/>	

</RelativeLayout>