<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
		 	  android:layout_height="fill_parent">
		 	  	
    <ExpandableListView android:id="@+id/proj_item_list"
    					style="@style/TaskEventExpandable"/>
			  
	<LinearLayout android:id="@+id/project_menu"
				  android:layout_width="fill_parent"
				  android:layout_height="50dp"
				  android:orientation="horizontal"
				  android:background="#26FFFFFF">
					   
			<ImageView android:id="@+id/proj_docs"
					   android:layout_width="wrap_content"
					   android:layout_height="wrap_content"
					   android:layout_gravity="center"
					   android:layout_weight="1"
					   android:src="@drawable/doc"/>
					   
			<View  style="@style/vertical_divider"/>
        			    
			<ImageView android:id="@+id/proj_additem"
					   android:layout_width="wrap_content"
					   android:layout_height="wrap_content"
					   android:layout_gravity="center"
					   android:layout_weight="1"
					   android:src="@drawable/additem_under_project"/>
					   			  
        	<View  style="@style/vertical_divider"/>
        			    
			<ImageView android:id="@+id/proj_contact" 
					   android:layout_width="wrap_content"
					   android:layout_height="wrap_content"
					   android:layout_gravity="center"
					   android:layout_weight="1"
					   android:src="@drawable/contacts"/>
	</LinearLayout>	
</LinearLayout>
