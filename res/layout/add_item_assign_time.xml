<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/add_event_assign_time"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_column="1"
				android:layout_span="3"
				android:orientation="vertical">
				
	<TableLayout android:layout_width="fill_parent"
			 	 android:layout_height="fill_parent"
			 	 android:stretchColumns="1">
			 	 
		<TableRow>
			<TextView android:id="@+id/event_from_date_picker" 
					  android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:layout_centerVertical="true"
					  android:text="從："
					  android:textStyle="bold"
					  android:textAppearance="?android:attr/textAppearanceMedium"/>
			
			<Button android:id="@+id/event_from_date_picker_context" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=""
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_toRightOf="@id/event_from_date_picker"/>
					
			<Button android:id="@+id/event_from_time_picker_context" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=""
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_toRightOf="@id/event_from_date_picker_context"/>							
		</TableRow>
		
		<TableRow>
			<TextView android:id="@+id/event_to_date_picker" 
					  android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:layout_centerVertical="true"
					  android:text="到："
					  android:textStyle="bold"
					  android:textAppearance="?android:attr/textAppearanceMedium"/>
			
			<Button android:id="@+id/event_to_date_picker_context" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=""
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_toRightOf="@id/event_to_date_picker"/>
					
			<Button android:id="@+id/event_to_time_picker_context" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text=""
					android:textStyle="bold"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_toRightOf="@id/event_to_date_picker_context"/>							
		</TableRow>
					
	</TableLayout>
	
</RelativeLayout>