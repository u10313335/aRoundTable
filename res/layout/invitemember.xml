<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent">
	
	<TextView android:id="@+id/projname_display"
			  android:layout_width="fill_parent" 
			  android:layout_height="wrap_content"
			  android:layout_marginTop="10px" 
			  android:text=""/>
	
	<TextView android:id="@+id/invite" 
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content" 
			  android:layout_marginTop="15px"
			  android:text="invite other members:"/>


	<TableLayout android:orientation="vertical"
				 android:layout_width="fill_parent"
				 android:layout_height="wrap_content">
		<TableRow>
			<AutoCompleteTextView android:id="@+id/member_email"
        						  android:layout_height="wrap_content"
        						  android:padding="1dip"
        						  android:layout_weight="1"
        						  android:layout_span="3"/>

			<ImageButton android:id="@+id/add_member" 
						 android:layout_height="wrap_content" 
						 android:src="@drawable/ic_input_add"/>	
		</TableRow>
	</TableLayout>

	<ListView android:id="@+id/memberlist" 
			  android:orientation="vertical"
			  android:layout_width="fill_parent" 
			  android:layout_height="wrap_content" 
			  android:scrollbars="vertical"
			  android:layout_weight="1"
			  android:layout_span="4"/>


	<TableLayout android:id="@+id/bottom_menu"
				 android:orientation="vertical"
				 android:layout_width="fill_parent" 
				 android:layout_height="wrap_content"
				 android:stretchColumns="*">
		<TableRow>
			<Button android:id="@+id/back" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:text="Back"/>

			<Button android:id="@+id/confirm" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:text="Confirm"/>

			<Button android:id="@+id/cancel" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:text="Cancel"/>
		</TableRow>
	</TableLayout>
	
</LinearLayout>