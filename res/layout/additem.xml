<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

	<LinearLayout android:id="@+id/additem_title"
				  android:orientation="vertical"
			  	  android:layout_width="fill_parent"
			  	  android:layout_height="wrap_content">
			  
		<TextView android:layout_width="fill_parent"
			  	  android:layout_height="wrap_content" 
			  	  android:background="@android:color/darker_gray"
			  	  android:text="新增項目"
			  	  android:gravity="center"
			  	  android:textColor="@android:color/white"
			  	  android:textStyle="bold"/>
			  
		<TextView android:layout_width="fill_parent"
			 	  android:layout_height="wrap_content" 
			  	  android:text=""/>
			  
	</LinearLayout>
	
	<TableLayout android:id="@+id/additem_button"
        			 android:layout_width="fill_parent" 
        			 android:layout_height="wrap_content"
					 android:stretchColumns="*"
					 android:layout_alignParentBottom="true">
	
			<TableRow android:background="@android:color/darker_gray">
				<Button android:id="@+id/additem_finish" 
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:gravity="center"
						android:text="@string/done"
						android:textStyle="bold"/>
	
				<Button android:id="@+id/additem_cancel" 
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_toRightOf="@id/additem_finish"
						android:gravity="center"
						android:text="@string/cancel"
						android:textStyle="bold"/>
			</TableRow>
		
		</TableLayout>
			
	<ScrollView android:id="@+id/additem_main"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_above="@id/additem_button"
				android:layout_below="@id/additem_title">    
			  
			  
		<TableLayout android:layout_width="fill_parent" 
			 	 	 android:layout_height="fill_parent"
			 		 android:stretchColumns="*">
<!-- wait to be changed to tab layout		
			<TableRow>
		
				<Button android:id="@+id/single" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:layout_column="1" 
						android:text="時限"
						android:textStyle="bold" 
						android:gravity="center"/>
	
				<Button android:id="@+id/assignment" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="批次"
						android:gravity="center"
						android:textStyle="bold"/>
	
				<Button android:id="@+id/event" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:text="事件"
						android:gravity="center"
						android:textStyle="bold"/>

			</TableRow>
-->		
			<TableRow>
				<TextView android:id="@+id/title" 
				 	 	  android:layout_width="wrap_content"
				  	  	  android:layout_height="wrap_content"
				  	  	  android:text="標題" 
				  	  	  android:textStyle="bold"
				  	  	  android:textAppearance="?android:attr/textAppearanceMedium"/>
	
				<EditText android:id="@+id/title_context"
				  	  	  android:layout_width="fill_parent" 
				  	  	  android:layout_height="wrap_content"
				  	  	  android:text="" 
				  	  	  android:layout_span="3"
				  	  	  android:textAppearance="?android:attr/textAppearanceMedium"/>
			</TableRow>
			
			<TableRow>
				<TextView android:id="@+id/item_create_under" 
				 	 	  android:layout_width="wrap_content"
				  	  	  android:layout_height="wrap_content"
				  	  	  android:text="建立於"
				  	  	  android:textStyle="bold"/>

				<TextView android:id="@+id/item_create_under_context" 
				 	 	  android:layout_width="wrap_content"
				  	  	  android:layout_height="wrap_content"
				  	  	  android:text="" 
				  	  	  android:layout_span="3"
				  	  	  android:textStyle="bold"
				  	  	  android:textAppearance="?android:attr/textAppearanceMedium"/>
			</TableRow>
	
			<TableRow>
				<TextView android:id="@+id/time"
					  	  android:layout_width="wrap_content" 
				  	  	  android:layout_height="wrap_content"
				 	  	  android:text="到期"
				 	  	  android:textStyle="bold"
				 	  	  android:textAppearance="?android:attr/textAppearanceMedium"/>
	
				<Button android:id="@+id/one_day" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:text="+1"/>
				
				<Button android:id="@+id/seven_day" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="+7"/>

				<Button android:id="@+id/n_day" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:text="+n"/>
			</TableRow>
	
			<TableRow>
				<ImageButton android:id="@+id/date" 
					 	 	 android:layout_column="1" 
					 	 	 android:layout_width="wrap_content"
					 	 	 android:layout_height="wrap_content"
	  				 	 	 android:src="@drawable/date"/>
	
				<Button android:id="@+id/dependent" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:text="相依"/>
	
				<Button android:id="@+id/underdetermined" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:text="未定"/>
			</TableRow>
	
			<TableRow>
				<TextView android:id="@+id/additem_due"
					  	  android:layout_column="1"
					  	  android:layout_span="3"
				 	  	  android:layout_width="wrap_content"
				  	  	  android:layout_height="wrap_content"
				  	  	  android:text="" 
				  	  	  android:textStyle="bold"
				  	  	  android:textAppearance="?android:attr/textAppearanceMedium"/>
			</TableRow>	
	
			<TableRow>
				<TextView android:id="@+id/owner" 
				  	  	  android:layout_width="wrap_content"
				 	  	  android:layout_height="wrap_content"
				  	  	  android:text="負責"
				  	  	  android:textStyle="bold"
				  	  	  android:textAppearance="?android:attr/textAppearanceMedium"/>
	
				<TextView android:id="@+id/owner_context"
				  	  	  android:layout_width="wrap_content" 
				  	  	  android:layout_height="wrap_content"
				  	  	  android:gravity="center"
				  	 	  android:text="none"/>
			</TableRow>
	
			<TableRow>	
				<EditText android:id="@+id/owneradd_context"
				 	  	  android:layout_width="wrap_content" 
				  	  	  android:layout_height="wrap_content"
				  	  	  android:layout_column="1"
				  	  	  android:layout_span="2" 
				  	  	  android:text=""/>
				  	  
				<ImageButton android:id="@+id/owner_add" 
					 	 	 android:layout_width="wrap_content"
					 	 	 android:layout_height="wrap_content"
					 	 	 android:src="@drawable/add"/>
			</TableRow>
			
			<TableRow>
				<TextView android:id="@+id/remarks" 
				 	  	  android:layout_width="wrap_content"
				  	  	  android:layout_height="wrap_content"
				  	  	  android:text="備註"
				  	  	  android:textStyle="bold"
				  	  	  android:textAppearance="?android:attr/textAppearanceMedium"/>
		
				<EditText android:id="@+id/remarks_context"
				  	  	  android:layout_width="wrap_content" 
				 	  	  android:layout_height="wrap_content"
				  	  	  android:layout_span="3"
				  	  	  android:text=""/>
			</TableRow>	
	
		</TableLayout>
	
	</ScrollView>

</RelativeLayout>